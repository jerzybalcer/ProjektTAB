<Page x:Class="DesktopClient.Pages.LoggedAsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoggedAsPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Zalogowano jako" 
                   Grid.Row="0"
                   Style="{StaticResource PageHeader}"/>

        <TextBlock Text="username" x:Name="LoggedUserName"
                   Grid.Row="1"
                   Style="{StaticResource PageHeader}" FontSize="20"/>
    </Grid>
</Page>
