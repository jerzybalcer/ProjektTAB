<Page x:Class="DesktopClient.Pages.AccountInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountInfo">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Content="Dane użytkownika" FontSize="24" HorizontalAlignment="Center"/>
            <Label Content="Imię" FontWeight="Bold"/>
            <TextBlock x:Name="firstname" Text="Adam" Foreground="#FF0088FF"/>
            <Label Content="Nazwisko" FontWeight="Bold"/>
            <TextBlock x:Name="lastname" Text="Kowalski" Foreground="#FF0088FF"/>
            <Label Content="pesel" FontWeight="Bold"/>
            <TextBlock x:Name="pesel" Text="XXXXXXXXXXX" Foreground="#FF0088FF"/>
            <Label Content="Data Urodzenia" FontWeight="Bold"/>
            <TextBlock x:Name="date" Text="XX-XX-XXXX" Foreground="#FF0088FF"/>
            <Label Content="płeć" FontWeight="Bold"/>
            <TextBlock x:Name="sex" Text="Mężczyzna" Foreground="#FF0088FF"/>
        </StackPanel>
    </Grid>
</Page>
