<Window x:Class="DesktopClient.Pages.InputPatientData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopClient.Pages"
        mc:Ignorable="d"
        Title="InputPatientData" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Content="Wprowadź dane pacjęta" FontSize="24" HorizontalAlignment="Center"/>
            <Label Content="Imię"/>
            <TextBox x:Name="firstname"/>
            <Label Content="Nazwisko"/>
            <TextBox x:Name="lastname"/>
            <Label Content="pesel"/>
            <TextBox x:Name="pesel" PreviewTextInput="NumberValidationTextBox" MaxLength="11"/>
            <Label Content="Data Urodzenia"/>
            <DatePicker/>
            <Label Content="płeć"/>
            <WrapPanel>
                <RadioButton GroupName="sex" x:Name="famale" Content="Kobieta" Margin="0,0,5,0"/>
                <RadioButton GroupName="sex" x:Name="male" Content="Mężczyzna"/>
            </WrapPanel>
            <Button Content="Dodaj" Click="Button_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
